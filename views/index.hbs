<ul class="list-group">
  <li class="list-group-item d-flex">
    <h3 class="cost--sum">Total Cost: <span id="total-record-cost">0000</span></h3>

  </li>
  {{!-- expense record list start --}}
  {{#each records}}
  <li  class="list-group-item d-flex">
    <div class="col--category-icon">
    
      <i class="fa fa-{{this.icon}} fa-3x" style="color:{{this.color}};"></i>
    </div>
    <div class="col--expense-info d-flex w-400 flex-column">
    <h5>{{this.name}}</h5>
    <small>Date: <span>{{this.date}}</span></small>
    </div>
    <div class="col--expense-amount d-flex w-400 flex-column">
    <p class="d-inline-block my-4 my-sm-2">$: <span class="each-record-amount">{{this.amount}}</span></p>
    </div>
    <div class="col--btns w-400 justify-content-between flex-row">
      <a href="/records/{{ this._id }}/edit" method="GET">
        <button class="btn btn-outline-success btn-sm my-4 my-sm-2 btn--edit" type="submit">Edit</button>
      </a>

      <form class="btn--delete d-inline-block" action="/records/{{ this._id }}?_method=DELETE" method="POST">
      <button class="btn btn-outline-success btn-sm my-4 my-sm-2 " type="submit">Delete</button>
      </form>
    </div>

  </li>
  {{/each}}
  <li  class="list-group-item d-flex">
    <a href="/records/new">
       <div class="btn--add mt-4">Create new record </div> 
    </a>

  </li>

</ul>

<script type="text/javascript" src="/javascripts/home.js"></script>


