<div class="card">

  <div class="card-header">
    Add Expense Record
  </div>

  <form action="/records" method="POST" class="card-body">

    <div class="form-row mb-2">
      <label for="name">Expanse Description</label>
      <input type="text" class="form-control" placeholder="expanse name" id="name" name="name" maxlength="15" required>
    </div>

    <div class="form-row mb-2"> 
      <label for="amount">Amount Spent</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input type="number" value="0" min="0" step="1"
              class="form-control currency" id="amount" name="amount" 
              required/>
      </div>
    </div>

    <div class="form-row mb-2">
      <label for="date">Date</label>
      <input class="form-control" type="text" name="date" id="datepicker" value={{today}} required>
    </div>

    <div class="form-row mb-2">
      <label for="merchant">Store Name</label>
      <input type="text" class="form-control" placeholder="where did you buy it?" id="merchant" name="merchant" maxlength="15" required>
    </div>

    <div class="form-row mb-2">
      <label for="category">Category</label>
      <select class="custom-select mr-sm-2" id="category" name="categoryId" required>
        <option value="" selected>Choose...</option>
        {{#each category}}
        <option value="{{this.categoryId}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/">
      <div class="btn btn-secondary">go back</div>  
    </a>

  </form>
</div>



